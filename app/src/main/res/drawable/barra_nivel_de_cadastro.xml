<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo (3º segmento - verde escuro) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#177300" />
        </shape>
    </item>

    <!-- 2º segmento (verde claro) ocupando 200dp, alinhado à esquerda -->
    <item android:width="200dp" android:gravity="left">
        <shape android:shape="rectangle">
            <solid android:color="#9CC891" />
        </shape>
    </item>

    <!-- 1º segmento (amarelo) ocupando 100dp, alinhado à esquerda -->
    <item android:width="100dp" android:gravity="left">
        <shape android:shape="rectangle">
            <solid android:color="#E5DDA0" />
        </shape>
    </item>

    <!-- Linha 1 em x=100dp -->
    <item android:width="2dp" android:gravity="left" android:left="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Linha 2 em x=200dp -->
    <item android:width="2dp" android:gravity="left" android:left="200dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

</layer-list>
