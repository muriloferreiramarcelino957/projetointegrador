<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#530081"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Menu -->
            <ImageView
                android:id="@+id/ic_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_menu" />

            <!-- Lupa -->
            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_search" />

            <!-- Nome do app -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="55dp"
                android:gravity="center"
                android:src="@drawable/logo"
                android:textColor="@android:color/white" />

            <!-- Ícones lado direito -->
            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:src="@drawable/ic_notification" />

            <ImageView
                android:id="@+id/ic_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_settings" />

            <ImageView
                android:id="@+id/ic_person"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_person" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="top">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_perfil"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seu Hélio"
                    android:fontFamily="@font/anekkannadabold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="online"
                    android:fontFamily="@font/anekkannadalight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/servicos_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_servicos_tag"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Fáxina | Hidráulica | Elétrica"
                android:fontFamily="@font/anekkannadaregular"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Info localização e cadastro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="top"
            android:layout_marginTop="-12dp">

            <!-- Bloco com calendário e localização -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Linha: ícone + texto calendário -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Ícone de calendário" />

                    <TextView
                        android:id="@+id/txtDesde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Na AllService desde abril de 2025"
                        android:fontFamily="@font/anekkannadalight"
                        android:textSize="17sp" />
                </LinearLayout>

                <!-- Linha: ícone + texto localização -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="Ícone de localização" />

                    <TextView
                        android:id="@+id/txtLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jardim Camburi, Vitória - ES"
                        android:fontFamily="@font/anekkannadalight"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/rating_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="50dp"
                android:text="Média"
                android:fontFamily="@font/anekkannadabold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nível de Cadastro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Nível de Cadastro"
            android:fontFamily="@font/anekkannadaregular" />

        <ProgressBar
            android:id="@+id/progressCadastro"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginHorizontal="16dp"
            android:max="100"
            android:progress="90"
            android:progressDrawable="@drawable/ic_rectangle51" />

        <!-- Validações e botão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="Endereço de e-mail"
                    android:fontFamily="@font/anekkannadalight"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="Número de Telefone"
                    android:fontFamily="@font/anekkannadalight"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="Facebook"
                    android:fontFamily="@font/anekkannadalight"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minha Agenda"
                android:fontFamily="@font/anekkannadasemibold"
                android:textColor="@android:color/white"
                android:backgroundTint="#5A0275" />
        </LinearLayout>

        <!-- Descrição -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Descrição"
            android:fontFamily="@font/anekkannadaregular"
            android:textSize="23sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sodales..."
            android:fontFamily="@font/anekkannadamedium"
            android:textSize="15sp"/>

        <!-- Fotos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Fotos"
            android:fontFamily="@font/anekkannadaregular"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_image_prestador1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_image_prestador2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_image_prestador3" />
        </LinearLayout>

        <!-- Quantidade de serviços -->
        <TextView
            android:id="@+id/quantidade_servicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Quantidade de serviços prestados:   27"
            android:textSize="24sp"
            android:fontFamily="@font/anekkannadaregular"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
