<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgroud">

    <!-- Logo da AllService -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/welcomeCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="48dp"
        android:contentDescription="Logo da AllService" />

    <!-- Card Translúcido -->
    <LinearLayout
        android:id="@+id/welcomeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_translucent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <!-- Texto de Boas-Vindas -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seja bem-vindo\nà AllService"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <!-- Botão Cadastre-se -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_dark_purple_background"
            android:text="Cadastre-se"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Botão Login -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_dark_purple_background"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="start|center_vertical"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>