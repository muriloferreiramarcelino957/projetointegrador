<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp">

        <!-- ÍCONE GRANDE -->
        <ImageView
            android:id="@+id/imgIcone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_calendar_agenda"
            android:layout_marginEnd="16dp"
            app:tint="#000000" />

        <!-- COLUNA CENTRAL (informações) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Data e Hora -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#777777" />

                <TextView
                    android:id="@+id/txtDataHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="22 maio 2025 - 9:10"
                    android:textColor="#777777"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Nome do serviço -->
            <TextView
                android:id="@+id/txtServico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faxina"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <!-- Local -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#777777" />

                <TextView
                    android:id="@+id/txtLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Jardim do Centro"
                    android:textColor="#777777"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- SETA -->
        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_arrow_rightc"
            android:layout_gravity="center_vertical"
            app:tint="#777777" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
