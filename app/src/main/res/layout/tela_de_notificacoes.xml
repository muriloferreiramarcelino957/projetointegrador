<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F8FF">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#5A0275"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_search"
            app:tint="@android:color/white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:src="@drawable/logo"
            android:scaleType="center"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ic_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/ic_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_settings"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/ic_person"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_person"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Sub-barra -->
    <LinearLayout
        android:id="@+id/subBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#E1B7F1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left_arrow"
            android:contentDescription="Voltar"
            android:padding="8dp"
            app:tint="#5A0275" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notification"
            app:tint="#5A0275" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Notificações"
            android:textColor="#5A0275"
            android:textSize="16sp"
            android:fontFamily="@font/anekkannadaregular"/>
    </LinearLayout>

    <!-- Cabeçalho filtros -->
    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/subBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Últimas notificações"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/anekkannadaregular" />

        <TextView
            android:id="@+id/btnMarcarComoLidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar todas como lidas"
            android:textColor="#5A0275"
            android:textSize="14sp"
            android:fontFamily="@font/anekkannadaregular"/>
    </LinearLayout>

    <!-- Conteúdo central: estado vazio -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/filters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_notifications_done"
            app:tint="#5A0275" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Você não tem notificações"
            android:textColor="#808080"
            android:textSize="14sp"
            android:fontFamily="@font/anekkannadaregular" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
