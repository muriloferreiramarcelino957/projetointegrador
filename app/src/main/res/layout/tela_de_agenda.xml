<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".TelaAgendaFragment">

    <include
        android:id="@+id/topBar"
        layout="@layout/item_top_navigation_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PERFIL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/btnArrowBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_left_arrow"
            app:tint="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_image_perfil"
            app:layout_constraintStart_toEndOf="@id/btnArrowBack"
            app:layout_constraintTop_toTopOf="@id/btnArrowBack"/>

        <LinearLayout
            android:id="@+id/boxInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carregando..."
                android:fontFamily="@font/anekkannadasemibold"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/status_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● online"
                android:fontFamily="@font/anekkannadalight"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 5"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CALENDÁRIO -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalendar"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/boxPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <!-- TIPO DE SERVIÇO -->
    <TextView
        android:id="@+id/tvTituloServicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Serviço"
        android:textSize="17sp"
        android:fontFamily="@font/anekkannadaregular"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardCalendar"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/llServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloServicos">

        <TextView
            android:id="@+id/btnService1"
            style="@style/ServiceOption"
            android:text="Serviço 1"/>

        <TextView
            android:id="@+id/btnService2"
            style="@style/ServiceOption"
            android:text="Serviço 2"/>

        <TextView
            android:id="@+id/btnService3"
            style="@style/ServiceOption"
            android:text="Serviço 3"/>
    </LinearLayout>

    <!-- HORÁRIOS -->
    <TextView
        android:id="@+id/tvTituloHorarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horários Disponíveis"
        android:fontFamily="@font/anekkannadaregular"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/llServices"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Mensagem de estado do dia (disponível / sem horário / selecione serviço) -->
    <TextView
        android:id="@+id/tvEstadoDia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="Selecione um serviço e uma data."
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloHorarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dropdown de horários -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilHorario"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoDia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/dropHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecione um horário"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- BOTÃO CONFIRMAR -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Confirmar"
        android:backgroundTint="#5A0275"
        android:textColor="@android:color/white"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tilHorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
