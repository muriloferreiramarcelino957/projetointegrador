<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaAgendaFragment">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#5A0275"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_search" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notification" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_settings" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_person" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnArrowBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_left_arrow"
                app:tint="@color/black" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_image_perfil"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carregando..."
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● online"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★ 5"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/servicos_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_servicos_tag"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Carregando..."
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Card do calendário -->
    <CalendarView
        android:id="@+id/card_calendar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título Serviços -->
    <TextView
        android:id="@+id/tvTituloServicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipos de Serviço"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_calendar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Serviços -->
    <LinearLayout
        android:id="@+id/llServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloServicos">

        <TextView
            android:id="@+id/btnFaxina"
            style="@style/ServiceOption"
            android:text="Carregando..." />

        <TextView
            android:id="@+id/btnHidraulica"
            style="@style/ServiceOption"
            android:text="Carregando..." />

        <TextView
            android:id="@+id/btnEletrica"
            style="@style/ServiceOption"
            android:text="Carregando..." />
    </LinearLayout>

    <!-- Título Horários -->
    <TextView
        android:id="@+id/tvTituloHorarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horários Disponíveis"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/llServices"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Horários -->
    <LinearLayout
        android:id="@+id/llHorarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloHorarios">

        <TextView
            android:id="@+id/btnTime1"
            style="@style/TimeOption"
            android:text="Carregando..." />

        <TextView
            android:id="@+id/btnTime2"
            style="@style/TimeOption"
            android:text="Carregando..." />

        <TextView
            android:id="@+id/btnTime3"
            style="@style/TimeOption"
            android:text="Carregando..." />
    </LinearLayout>

    <!-- Horário Selecionado -->
    <TextView
        android:id="@+id/tvSelectedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--*"
        android:textSize="14sp"
        android:textColor="@color/purple_200"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/llHorarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Confirmar -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_200"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
