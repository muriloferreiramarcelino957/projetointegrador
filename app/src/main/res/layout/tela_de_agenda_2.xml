<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ”¹ TOP BAR -->
        <include
            android:id="@+id/topBar"
            layout="@layout/item_top_navigation_bar" />

        <!-- ðŸ”¹ TÃTULO DA PÃGINA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnArrowBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_left_arrow"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/title_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agenda"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- ðŸ”¹ DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”¹ SUBTÃTULO -->
        <TextView
            android:id="@+id/txtTituloLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meus agendamentos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp" />

        <!-- ðŸ”¹ MENSAGEM DE LISTA VAZIA -->
        <TextView
            android:id="@+id/txtSemAgendamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum agendamento encontrado."
            android:textSize="16sp"
            android:textColor="#888888"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone" />

        <!-- ðŸ”¹ LISTA DE AGENDAMENTOS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>
