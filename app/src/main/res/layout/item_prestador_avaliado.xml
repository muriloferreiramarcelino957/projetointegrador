<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_image_perfil"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Caio Silva"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="@font/anekkannadabold"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvUltimoAcesso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Último acesso há 18 horas"
            android:textColor="#444"
            android:textSize="12sp"
            android:fontFamily="@font/anekkannadalight"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvNome"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iconCalendar"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_calendar"
            app:tint="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvUltimoAcesso" />

        <TextView
            android:id="@+id/tvDataInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Na AllService desde maio 2024"
            android:textColor="#444"
            android:textSize="12sp"
            android:fontFamily="@font/anekkannadalight"
            app:layout_constraintStart_toEndOf="@id/iconCalendar"
            app:layout_constraintTop_toTopOf="@id/iconCalendar"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iconLocal"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_location"
            app:tint="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@id/iconCalendar" />

        <TextView
            android:id="@+id/tvLocalizacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Jardim Camburi, Vitória - ES"
            android:textColor="#444"
            android:textSize="12sp"
            android:fontFamily="@font/anekkannadalight"
            app:layout_constraintStart_toEndOf="@id/iconLocal"
            app:layout_constraintTop_toTopOf="@id/iconLocal"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iconStar"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_star"
            app:tint="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@id/iconLocal" />

        <TextView
            android:id="@+id/tvNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintStart_toEndOf="@id/iconStar"
            app:layout_constraintTop_toTopOf="@id/iconStar"
            app:layout_constraintBottom_toBottomOf="@id/iconStar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>