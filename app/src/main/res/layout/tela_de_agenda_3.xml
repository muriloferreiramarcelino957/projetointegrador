<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FF">

    <!-- ðŸ”¹ TOP BAR -->
    <include
        android:id="@+id/topBar"
        layout="@layout/item_top_navigation_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ TÃTULO + VOLTAR -->
    <LinearLayout
        android:id="@+id/headerAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/btn_arrow_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_left_arrow"
            app:tint="#000"/>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="InformaÃ§Ãµes Agenda"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>
    </LinearLayout>

    <!-- ðŸ”¹ CARD PRINCIPAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerAgenda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="26dp">

            <!-- ðŸ”¹ DATA + HORA + STATUS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#9AA1A7"/>

                <TextView
                    android:id="@+id/tvDataHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 maio 2025 - 9:10"
                    android:textSize="17sp"
                    android:textColor="#9AA1A7"
                    android:layout_marginStart="10dp"/>

                <!-- ðŸ”¹ STATUS DO SERVIÃ‡O (NOVO) -->
                <TextView
                    android:id="@+id/tvStatusServico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ aguardando resposta"
                    android:textColor="#F39C12"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- ðŸ”¹ Tipo de serviÃ§o -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de ServiÃ§o"
                android:textStyle="bold"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/tvTipoServico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faxina"
                android:textColor="#888"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>

            <!-- ðŸ”¹ LocalizaÃ§Ã£o -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LocalizaÃ§Ã£o"
                android:textStyle="bold"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/tvLocalizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rua das Palmeiras, Bairro Jardim VitÃ³ria, Serra - ES"
                android:textColor="#9AA1A7"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <!-- ðŸ”¹ InformaÃ§Ãµes Contratante -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="InformaÃ§Ãµes Contratante"
                android:textStyle="bold"
                android:textColor="#555"
                android:layout_marginTop="26dp"
                android:textSize="14sp"/>

            <!-- ðŸ”¥ BLOCO DO PRESTADOR â€“ VERSÃƒO COMPACTA (SEM SCROLL) -->
            <LinearLayout
                android:id="@+id/blocoPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Avatar + Nome + BotÃ£o -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_image_perfil"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="10dp"/>

                    <!-- Nome + infos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome do Prestador"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/txtDesde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Na AllService desde nov/2025"
                            android:textSize="11sp"
                            android:textColor="#777"
                            android:layout_marginTop="1dp"/>

                        <TextView
                            android:id="@+id/status_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â— online"
                            android:textColor="#4CAF50"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnConcluir"
                        android:layout_width="120dp"
                        android:layout_height="36dp"
                        android:text="Concluir"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:backgroundTint="#4B007D"
                        android:textColor="#FFF"
                        app:cornerRadius="18dp"/>
                </LinearLayout>

                <!-- Divider pequeno -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <!-- EndereÃ§o -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EndereÃ§o"
                    android:textStyle="bold"
                    android:textColor="#555"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvEnderecoCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rua X, 123 - Bairro - Cidade/UF"
                    android:textColor="#777"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>

                <!-- Telefone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone"
                    android:textStyle="bold"
                    android:textColor="#555"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txtTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(27) 99999-9999"
                    android:textColor="#777"
                    android:textSize="13sp"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textStyle="bold"
                    android:textColor="#555"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prestador@gmail.com"
                    android:textColor="#777"
                    android:textSize="13sp"/>

                <!-- Nota -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        app:tint="#FFB300"/>

                    <TextView
                        android:id="@+id/txtRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
