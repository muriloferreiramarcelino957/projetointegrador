<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtros"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#001F4D"
            android:layout_marginBottom="20dp" />

        <!-- Nível de Cadastro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nível de Cadastro"
            android:textColor="#000"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spNivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Serviços Prestados -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serviços Prestados"
            android:textColor="#000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Encanador, Eletricista"
            android:layout_marginBottom="20dp" />

        <!-- Avaliação Geral -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaliação Geral"
            android:textColor="#000"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_marginBottom="20dp" />

        <!-- Localização -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localização (Cidade)"
            android:textColor="#000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tvLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: São Paulo, Rio de Janeiro"
            android:layout_marginBottom="25dp" />

        <!-- Botão aplicar -->
        <Button
            android:id="@+id/btnAplicar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Aplicar Filtros"
            android:backgroundTint="#5A0275"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
