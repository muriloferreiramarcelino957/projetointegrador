<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtros"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2A1A4A"
            android:layout_marginBottom="16dp" />

        <!-- Nível de cadastro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nível de Cadastro"
            android:textColor="#333"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spNivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Serviço prestado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serviço Prestado"
            android:textColor="#333"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutServicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecione um serviço"
            android:layout_marginBottom="20dp">

            <AutoCompleteTextView
                android:id="@+id/etServicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Avaliação -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaliação Mínima:"
            android:textColor="#333"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_marginBottom="20dp" />

        <!-- Cidade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidade"
            android:textColor="#333"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:id="@+id/tvLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a cidade"
            android:layout_marginBottom="25dp" />

        <!-- Botão aplicar -->
        <Button
            android:id="@+id/btnAplicar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Aplicar Filtros"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:backgroundTint="#5A0275" />

    </LinearLayout>

</ScrollView>
