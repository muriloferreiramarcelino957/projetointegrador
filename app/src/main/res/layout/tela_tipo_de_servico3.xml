<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_gradiente">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtInstrucao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Escolha um serviço que deseja prestar:"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/anekkannadaregular"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoServico"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Selecione um serviço"
        android:textColor="@android:color/black"
        android:textColorHint="#777777"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        app:layout_constraintTop_toBottomOf="@id/txtInstrucao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o valor cobrado por hora"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/anekkannadaregular"
        app:layout_constraintTop_toBottomOf="@id/autoServico"
        app:layout_constraintStart_toStartOf="@id/autoServico" />

    <EditText
        android:id="@+id/editValor"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:hint="Valor por hora"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textColorHint="#777777"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        app:layout_constraintTop_toBottomOf="@id/txtValor"
        app:layout_constraintStart_toStartOf="@id/autoServico"
        app:layout_constraintEnd_toEndOf="@id/autoServico" />

    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/editValor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="OK"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/anekkannadaregular"
            android:backgroundTint="@android:color/white"
            android:elevation="3dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnAdicionar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Adicionar outro"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/anekkannadaregular"
            android:backgroundTint="@android:color/white"
            android:elevation="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bolinhas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/containerBotoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ball1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ball_not_pressed"
            android:layout_marginEnd="6dp" />

        <ImageView
            android:id="@+id/ball2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ball_not_pressed"
            android:layout_marginEnd="6dp" />

        <ImageView
            android:id="@+id/ball3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ball_pressed" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
