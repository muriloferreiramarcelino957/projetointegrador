<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#5A0275"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <!-- Menu -->

            <ImageView
                android:id="@+id/ic_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_menu"
                />
            <!-- Lupa -->
            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_search"
                />
            <!-- Nome do app -->


            <!-- Ícones lado direito -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"

                android:src="@drawable/logo"
                android:textColor="@android:color/white"

                />

            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_notification"
                />

            <ImageView
                android:id="@+id/ic_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_settings"
                />

            <ImageView
                android:id="@+id/ic_person"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_person"
                />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="top">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_image_perfil"
                android:layout_marginEnd="12dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seu Hélio"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● online"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★ 5"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tags de serviço -->
            <TextView
                android:id="@+id/servicos_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_servicos_tag"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Fáxina | Hidráulica | Elétrica"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Info localização e cadastro -->


        <!-- Info localização e cadastro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="top"
            android:layout_marginTop="-12dp">

            <!-- Bloco com calendário e localização -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Linha: ícone + texto calendário -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Ícone de calendário"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/txtDesde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Na AllService desde abril de 2025"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Linha: ícone + texto localização -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="Ícone de localização"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/txtLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jardim Camburi, Vitória - ES"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Média de avaliação -->
            <TextView
                android:id="@+id/rating_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="50dp"
                android:text="Média\n★ 5"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Nível de Cadastro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nível de Cadastro"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <ProgressBar
            android:id="@+id/progressCadastro"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginHorizontal="16dp"
            android:progress="90"
            android:max="100"
            android:progressDrawable="@drawable/ic_rectangle51" />

        <!-- Validações e botão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView android:text="✓ Endereço de e-mail" android:textSize="14sp"   android:layout_width="150dp" android:layout_height="25dp"/>
                <TextView android:text="✓ Número de Telefone" android:textSize="14sp" android:layout_width="150dp" android:layout_height="25dp"/>
                <TextView android:text="✓ Facebook" android:textSize="14sp" android:layout_width="150dp" android:layout_height="25dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minha Agenda"
                android:backgroundTint="#5A0275"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Descrição -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sodales..." />

        <!-- Fotos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📷 Fotos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_image_prestador1"

                android:layout_marginEnd="4dp"

                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_image_prestador2"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_image_prestador3"
                />
        </LinearLayout>

        <!-- Quantidade de serviços -->
        <TextView
            android:id="@+id/quantidade_servicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Quantidade de serviços prestados:   27"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>

