<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#5A0275"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <!-- Menu -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_menu"
                />
            <!-- Lupa -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_search"
                />
            <!-- Nome do app -->


            <!-- Ícones lado direito -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"

                android:src="@drawable/logo"
                android:textColor="@android:color/white"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_notification"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_settings"
                />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_person"
                />
        </LinearLayout>

        <!-- Título Agenda -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/btn_arrow_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_left_arrow"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/title_agenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agenda"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
             />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/calendar_border"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">
        <!-- Data 22 maio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22 maio"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Dias da semana -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Dias do mês -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18"
                android:gravity="center"
                android:textColor="#AAAAAA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="19"
                android:gravity="center"
                android:textColor="#AAAAAA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20"
                android:gravity="center"
                android:textColor="#AAAAAA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="21"
                android:gravity="center"
                android:textColor="#AAAAAA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="22"
                android:gravity="center"
                android:textColor="#0000FF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23"
                android:gravity="center"
                android:textColor="#AAAAAA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24"
                android:gravity="center"
                android:textColor="#AAAAAA" />
        </LinearLayout>
    </LinearLayout>
        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- Título Minha agenda -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minha agenda"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="#000000"
            />
        <!-- Ver tudo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Ver tudo"
                android:textColor="#0000FF"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- Item 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/calendar_border"
        android:padding="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <!-- ImageView à esquerda -->
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_calendar_agenda"
            android:layout_marginEnd="16dp" />

        <!-- Informações à direita -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Data e hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calendar_serv"
                    android:layout_width="20dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/eventDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="8dp"
                    android:text="22 maio 2025 - 9:10"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>
            <!-- Tipo de evento -->

            <TextView
                android:id="@+id/eventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Faxina"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Localização -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/location_serv"
                    android:layout_width="20dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/eventLocation"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="8dp"
                    android:text="Jardim do Centro"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/arrow_forward"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_rightc"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/calendar_border"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <!-- ImageView à esquerda -->
            <ImageView
                android:id="@+id/eventImage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_calendar_agenda"
                android:layout_marginEnd="16dp" />

            <!-- Informações à direita -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <!-- Data e hora -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/calendar_serv2"
                        android:layout_width="20dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        />

                    <TextView
                        android:id="@+id/eventDateTime2"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:text="22 maio 2025 - 11:20"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <!-- Tipo de evento -->
                <TextView
                    android:id="@+id/eventType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Serviço Elétrico"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <!-- Localização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/location_serv2"
                        android:layout_width="20dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        />

                    <TextView
                        android:id="@+id/eventLocation2"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:text="Jardim do Centro"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/arrow_forward2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_rightc"
                android:layout_marginEnd="16dp" />
        </LinearLayout>
        <!-- Item 3 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/calendar_border"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <!-- ImageView à esquerda -->
            <ImageView
                android:id="@+id/eventImage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_calendar_agenda"
                android:layout_marginEnd="16dp" />

            <!-- Informações à direita -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Data e hora -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/calendar_serv3"
                        android:layout_width="20dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        />

                    <TextView
                        android:id="@+id/eventDateTime3"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:text="22 maio 2025 - 15:30"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <!-- Tipo de evento -->
                <TextView
                    android:id="@+id/eventType3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hidráulica"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <!-- Localização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/location_serv3"
                        android:layout_width="20dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        />

                    <TextView
                        android:id="@+id/eventLocation3"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:text="Jardim do Centro"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/arrow_forward3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_rightc"
                android:layout_marginEnd="16dp" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>