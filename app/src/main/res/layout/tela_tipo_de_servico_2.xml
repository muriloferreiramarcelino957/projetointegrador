<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_gradiente">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtInstrucao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecione horários para cada dia escolhido"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/anekkannadaregular"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/txtInstrucao"
        app:layout_constraintBottom_toTopOf="@id/btnProximo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerDias"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <Button
        android:id="@+id/btnProximo"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Próxima tela"
        android:textSize="18sp"
        android:fontFamily="@font/anekkannadaregular"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        app:cornerRadius="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/scrollContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ballsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintTop_toBottomOf="@id/btnProximo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ball1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ball_not_pressed"
            android:layout_marginEnd="6dp" />

        <ImageView
            android:id="@+id/ball2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ball_pressed"
            android:layout_marginEnd="6dp" />

        <ImageView
            android:id="@+id/ball3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_ball_not_pressed" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
