<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F8FF">

    <!-- ================= TOP BAR CORRETA ================= -->
    <include
        android:id="@+id/topBar"
        layout="@layout/item_top_navigation_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- =============== SUB-BARRA (TÍTULO) =============== -->
    <LinearLayout
        android:id="@+id/subBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:fontFamily="@font/anekkannadaregular" />
    </LinearLayout>

    <!-- =============== TEMA ESCURO =============== -->
    <LinearLayout
        android:id="@+id/layoutDarkMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/subBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_moon"
            android:layout_marginEnd="8dp"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema escuro"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginEnd="8dp" />

        <Switch
            android:id="@+id/switchTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false" />
    </LinearLayout>

    <!-- =============== BOTÃO EDITAR PERFIL =============== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditProfile"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#A000FF"
        android:text="Editar perfil"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/anekkannadaregular"
        app:icon="@drawable/ic_edit"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDarkMode"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
