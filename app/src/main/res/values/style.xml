<resources>
    <style name="WeekLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TimeOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#2E0046</item>
    </style>

    <style name="TimeOptionSelected" parent="TimeOption">
        <item name="android:background">@drawable/button_purple200_background</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ServiceOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#2E0046</item>
    </style>

    <style name="ServiceOptionSelected" parent="ServiceOption">
        <item name="android:background">@drawable/button_purple100_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalendarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDayTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>


</resources>
